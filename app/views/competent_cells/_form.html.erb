<style type="text/css">
    input, select, textarea {
      padding: 8px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      width: 100%;
      background: #fff;
      font-size: 120%;
    }
</style>
<%= form_for(competent_cell) do |f| %>
  <% if competent_cell.errors.any? %>
    <div id="error_explanation" class="container">
      <h2><%= pluralize(competent_cell.errors.count, "error") %> prohibited this competent_cell from being saved:</h2>

      <ul>
      <% competent_cell.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container form_container">
    <div class="row">
      <span class = "form_label">Place</span><span class = "form_field"><%= f.text_field :place %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Species</span><span class = "form_field"><%= f.text_field :species%></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Strain</span><span class = "form_field"><%= f.text_field :strain%></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Genotype</span><span class = "form_field"><%= f.text_field :genotype%></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Antibiotic resistance</span><span class = "form_field"><%= f.text_field :antibiotic_resistance %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Usage</span><span class = "form_field"><%= f.text_field :usage%></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Comments</span><span class = "form_field"><%= f.text_area :comments%></span>
    </div><br>
    <div class="actions submit_button form_submit">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>
