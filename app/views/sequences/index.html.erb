<p id="notice"><%= notice %></p>

<h1>Listing Sequences</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Organism</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sequences.each do |sequence| %>
      <tr>
        <td><%= link_to sequence.name, sequence %></td>
        <td><%= sequence.organism %></td>
        <% if current_user.username == 'admin' %>
          <td><%= link_to 'Edit', edit_sequence_path(sequence) %></td>
          <td><%= link_to 'Destroy', sequence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sequence', new_sequence_path %>
<%= link_to 'Back', root_path %>

