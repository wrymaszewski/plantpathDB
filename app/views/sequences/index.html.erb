<p id="notice"><%= notice %></p>

<div class="container">
    <h1 class = "text-center">Sequences</h1>

    <table id ="sequences" class = "display">
      <thead>
        <tr>
          <th>Name</th>
          <th>Organism</th>
          <% if current_user.username == 'admin' %>
              <th>Modify</th>
          <%end%>
        </tr>
      </thead>

      <tbody>
        <% @sequences.each do |sequence| %>
          <tr>
            <td><%= link_to sequence.name, sequence %></td>
            <td><%= sequence.organism %></td>
            <% if current_user.username == 'admin' %>
              <td><%= link_to edit_sequence_path(sequence) do %>
                <i class = "glyphicon glyphicon-edit ikona"></i><%end%>
                  <%= link_to sequence, method: :delete, data: { confirm: 'Are you sure?' } do %>
                 <i class = "glyphicon glyphicon-floppy-remove ikona"></i><%end%></td> 
            <%end%>
          </tr>
        <% end %>
      </tbody>
    </table><br>
    <%= button_to 'Create sequence', new_sequence_path, :method => :get %>
</div>