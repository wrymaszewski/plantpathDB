<%= form_for [@sequence, @primer] do |f| %>
  <% if @primer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@primer.errors.count, "error") %> prohibited this primer from being saved:</h2>

      <ul>
      <% @primer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :p_sequence %><br>
    <%= f.text_field :p_sequence %>
  </div>
  <div class="field">
    <%= f.label :direction %><br>
    <%= f.select :direction, options_for_select([["forward", "forward"], ["reverse", "reverse"]], :selected => f.object.direction) %>
  </div>
  <div class="field">
    <%= f.label :position %><br>
    <%= f.number_field :position %>
  </div>
  <div class="field">
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
