<p id="notice"><%= notice %></p>

<h1 class="text-center">
  <span>Vector:</span>
  <span class = "sequence_name" ><%= @vector.name %></span>
</h1>


<div class="container">
  <% if @vector.vector_attachments.first %>
    <h2 class="text-center">Vector attachments</h2>
      <table id = "sequence_attachments", class = "display">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Comments</th>
            <th>Download</th>
            <% if current_user.username == 'admin' %>
             <th>Change</th>
            <%end%>
          </tr>
        </thead>
        <tbody>
          <% @vector.vector_attachments.each do |vector_attachment| %>
            <tr>
              <td><%= vector_attachment.name %></td>
              <td><%= vector_attachment.file_type %></td>
              <td><%= vector_attachment.comments %></td>
              <td><%= link_to :controller => 'vector_attachments',
              :action => :view_file, :id =>vector_attachment.id, :vector_id =>vector_attachment.vector.id do %>
                <i class = "glyphicon glyphicon-eye-open ikona"></i><%end%>
                <%= link_to :controller => 'vector_attachments',
              :action => :download_file, :id =>vector_attachment.id, :vector_id =>vector_attachment.vector.id do %>
                <i class = "glyphicon glyphicon-floppy-save ikona"></i><%end%></td>
              <% if current_user.username == 'admin' %>
                  <td><%= link_to [@vector, vector_attachment], method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class = "glyphicon glyphicon-floppy-remove ikona"></i><%end%></td> 
              <%end%>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
    <%end%>
    <%= button_to 'Create vector attachment', new_vector_vector_attachment_path(@vector), :method => :get %>
    <br><hr>
</div>
