<style type="text/css">
    input, select, textarea {
      padding: 8px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      width: 100%;
      background: #fff;
      font-size: 120%;
    }
  </style>

<%= form_for(vector) do |f| %>
  <% if vector.errors.any? %>
    <div id="error_explanation" class="container">
      <h2><%= pluralize(vector.errors.count, "error") %> prohibited this vector from being saved:</h2>

      <ul>
      <% vector.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container form_container">

    <div class="row">
        <span class = "form_label">Name</span><span class = "form_field"><%= f.text_field :name %></span>
      </div><br>


    <div class="row">
        <span class = "form_label">Size [bp]</span><span class = "form_field"><%= f.number_field :size %></span>
      </div><br>


    <div class="row">
        <span class = "form_label">Antibiotic resistance</span><span class = "form_field"><%= f.text_field :antibiotic_resistance %></span>
      </div><br>

    <div class="row">
        <span class = "form_label">Copy number</span><span class = "form_field"><%= f.select :copy_number, options_for_select([["high","high"], ["low", "low"]], :selected => f.object.copy_number) %></span>
      </div><br>

    <div class="row">
        <span class = "form_label">Usage</span><span class = "form_field"><%= f.text_field :usage %></span>
      </div><br>

    <div class="row">
        <span class = "form_label">Casette</span><span class = "form_field"><%= f.text_field :casette%></span>
      </div><br>


    <div class="row">
        <span class = "form_label">Comments</span><span class = "form_field"><%= f.text_area :comments %></span>
      </div><br>

    <div class="actions submit_button form_submit">
        <%= f.submit "Submit" %>
      </div>
  <% end %>
</div>
