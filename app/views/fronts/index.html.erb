<p id="notice"><%= notice %></p>

<% if current_user.username == "admin" %>
	<div class="button"><%=button_to "Create new user", new_user_path, :method => :get %></div>
	<div class="button"><%=button_to "Manage accounts", users_path, :method => :get %></div>
<br><hr><%end%>

<% if @responsibilities_pending.first %>
	<h1 class = "text-center">Pending responsibilities</h1>
	<table id = "pending_resp" class = "display">
	  <thead>
	    <tr>
	      <th>First name</th>
	      <th>Last name</th>
	      <th>Action</th>
	      <th>Date of action</th>
	      <th>Comments</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @responsibilities_pending.each do |responsibility| %>
	      <tr>
	        <td><%= responsibility.first_name %></td>
	        <td><%= responsibility.last_name %></td>
	        <td><%= responsibility.action %></td>
	        <td><%= responsibility.date_of_action %></td>
	        <td><%= responsibility.comments %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<%end%>
