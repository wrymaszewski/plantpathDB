<p id="notice"><%= notice %></p>

<div class="container">
    <h1 class = "text-center">Users</h1>
    <table id = "users", class = "display">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Username</th>
          <% if current_user.username = 'admin' %>
            <th>Modify</th>
          <%end%>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.username %></td>
            <% if current_user.username = 'admin' %>
              <td><%= link_to edit_user_path(user) do %>
                  <i class = "glyphicon glyphicon-edit ikona"></i><%end%>
              <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class = "glyphicon glyphicon-floppy-remove ikona"></i><%end%></td>
            <%end%>
          </tr>
        <% end %>
      </tbody>
    </table><br>
  <div class="button"><%=button_to "Create new user", new_user_path, :method => :get %></div>
</div>
