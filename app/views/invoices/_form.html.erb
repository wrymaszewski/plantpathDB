<style type="text/css">
    input, select, textarea {
      padding: 8px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      width: 100%;
      background: #fff;
      font-size: 120%;
    }
     select {
      padding: 8px 10px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      width: 32.3%;
      background: #fff;
      font-size: 120%;
  </style>
<%= form_for(invoice) do |f| %>
  <% if invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% invoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container form_container">
    <div class="row">
      <span class = "form_label">Catalogue number</span><span class = "form_field"><%= f.text_field :cat_no %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Supplier</span><span class = "form_field"><%= f.text_field :supplier %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Category[1]</span><span class = "form_field"><%= f.text_field :category_1 %></span>
    </div><br>
     <div class="row">
      <span class = "form_label">Category[2]</span><span class = "form_field"><%= f.text_field :category_2 %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Name</span><span class = "form_field"><%= f.text_field :name %></span>
    </div><br>
    <div class="row">
    <span class = "form_label">Price</span><span class = "form_field"><%= f.number_field :price, class: :text_field, step: :any %></span>
    </div><br>
    <div class="row">
    <span class = "form_label">Date</span><span class = "form_field"><%= f.date_select :date %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">File</span><span class = "btn btn-default btn-file">Browse...<%= f.file_field :file %>
      <%= f.hidden_field :file_cache %></span></div><br>
    <div class="row">
      <span class = "form_label">Comments</span><span class = "form_field"><%= f.text_area :comments %></span>
    </div><br>
    <div class="actions submit_button form_submit">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>
