<p id="notice"><%= notice %></p>

<h1>Responsibilities</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Action</th>
      <th>Data of action</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responsibilities.each do |responsibility| %>
      <tr>
        <td><%= responsibility.first_name %></td>
        <td><%= responsibility.last_name %></td>
        <td><%= responsibility.action %></td>
        <td><%= responsibility.date_of_action %></td>
        <td><%= responsibility.comments %></td>
        <% if current_user.username == 'admin' %>
          <td><%= link_to 'Edit', edit_responsibility_path(responsibility) %></td>
          <td><%= link_to 'Destroy', responsibility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Responsibility', new_responsibility_path %>
<%= link_to 'Back', root_path %>
