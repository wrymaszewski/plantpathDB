<p id="notice"><%= notice %></p>

<h1 class="text-center">Responsibilities</h1>

<table id="responsibilities" class="display">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Action</th>
      <th>Date</th>
      <th>Comments</th>
      <% if current_user.username == 'admin' %>
        <th>Edit</th>
        <th>Delete</th>
      <%end%>
    </tr>
  </thead>
       <% @responsibilities.each do |responsibility| %>
      <tr>
        <td><%= responsibility.first_name %></td>
        <td><%= responsibility.last_name %></td>
        <td><%= responsibility.action %></td>
        <td><%= responsibility.date_of_action %></td>
        <td><%= responsibility.comments %></td>
        <% if current_user.username == "admin" %>
          <td><%= link_to edit_responsibility_path(responsibility), class: "btn btn-link" do %>
            <i class = "glyphicon glyphicon-edit"></i><%end%></td>
          <td><%= link_to responsibility, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"  do %>
            <i class = "glyphicon glyphicon-floppy-remove"></i><%end%></td>
        <%end%>
      </tr>
    <% end %>
  <tbody>
  </tbody>
</table><br>

<div class="button"> <%= button_to 'New responsibility', new_responsibility_path, :method =>:get %>
 </div>
