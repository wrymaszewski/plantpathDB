  <style type="text/css">
    input, textarea {
      padding: 8px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      width: 100%;
      background: #fff;
      font-size: 120%;
    }
    select {
      padding: 8px 10px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      width: 32.3%;
      background: #fff;
      font-size: 120%;
    }
    #state > select {
      width: 100% ;
    }
  </style>
<%= form_for(regular_chemical) do |f| %>
  <% if regular_chemical.errors.any? %>
    <div id="error_explanation" class="container">
      <h2><%= pluralize(regular_chemical.errors.count, "error") %> prohibited this regular_chemical from being saved:</h2>

      <ul>
      <% regular_chemical.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <div class="container form_container">
    <div class="row">
      <span class = "form_label">Name</span><span class = "form_field"><%= f.text_field :short_name %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Alternative name</span><span class = "form_field"><%= f.text_field :full_name %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Formula</span><span class = "form_field"><%= f.text_field :formula %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Type</span><span class = "form_field"><%= f.text_field :rodzaj %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Producer</span><span class = "form_field"><%= f.text_field :producer %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Catalogue number</span><span class = "form_field"><%= f.text_field :catalogue_number %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Delivery date</span><span class = "form_field"><%= f.date_select :delivery_date %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Stock</span><span class = "form_field" id = "state"><%= f.select :state, options_for_select([["full","full"], ["almost empty", "almost_empty"], ["empty", "empty"]],:selected => f.object.state) %></span>
    </div><br>
    <div class="row">
      <span class = "form_label">Comments</span><span class = "form_field"><%= f.text_area :comments %></span>
    </div><br>
    <div class="actions submit_button form_submit">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>
